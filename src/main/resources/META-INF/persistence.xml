<persistence xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd" version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <persistence-unit name="dev">

        <description> Hibernate JPA Configuration</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cooltimediadb"/>
            <!--            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://172.21.10.2;DatabaseName=employee;integratedSecurity=true"/>-->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="pass1234"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!--create-drop-->
            <property name="show_sql" value="true"/>
            <!--            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
                        <property name="javax.persistence.schema-generation.scripts.create-target" value="./create_sqlserver.sql"/>
                        <property name="javax.persistence.schema-generation.scripts.drop-target" value="./drop_sqlserver.sql"/>-->
        </properties>
    </persistence-unit>
    <persistence-unit name="prod">
        <description> Hibernate JPA Configuration</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://cooltimedia-db:3306/cooltimediadb?useSSL=false"/>
            <!--            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://172.21.10.2;DatabaseName=employee;integratedSecurity=true"/>-->
            <property name="javax.persistence.jdbc.user" value="cooltimedia"/>
            <property name="javax.persistence.jdbc.password" value="pass1234"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!--create-drop-->
            <property name="show_sql" value="false"/>
            <!--            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
                        <property name="javax.persistence.schema-generation.scripts.create-target" value="./create_sqlserver.sql"/>
                        <property name="javax.persistence.schema-generation.scripts.drop-target" value="./drop_sqlserver.sql"/>-->
        </properties>
    </persistence-unit>
</persistence>